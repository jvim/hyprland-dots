import url("/home/kartel/.cache/wal/colors-waybar.css");

* {
    border: none;
    border-radius: 0;
    font-family: "JetBrainsMono Nerd Font";
    font-weight: bold;
    font-size: 16px;
    min-height: 30px;

}

#custom-keyboard {
    background: rgba(36, 39, 58, 0.9);  /* Цвет фона */
    border-radius: 0 10px 10px 0;                   /* Убираем все закругления */
    padding: 0 10px;                    /* Отступы внутри */
    margin: 8px 0 0 0;                  /* Внешние отступы (убрали левый отступ) */
}

#workspaces {
    background: rgba(36, 39, 58, 0.9);  /* Цвет фона */
    border-radius: 10px 10px 10px 10px;                   /* Убираем все закругления */
    padding: 0 10px;                    /* Отступы внутри */
    margin: 8px 0 0 0;                  /* Внешние отступы (убрали левый отступ) */
}

#workspaces button {
    color: #cad3f5;
    font-weight: bold;
    padding: 0 5px;
    transition: all 0.3s ease;
    border-radius: 0;                   /* Убираем закругления у кнопок */
}

#workspaces button.active {
    color: #8aadf4;
    background: rgba(138, 173, 244, 0.2);
    border-radius: 0;                   /* Убираем закругления у активной кнопки */
}

#workspaces button.urgent {
    color: #ed8796;
    animation: blink 2s infinite;
    border-radius: 0;                   /* Убираем закругления у срочной кнопки */
}




